@model LoginModel

<form class="form"  asp-action="Login" asp-controller="Acc" asp-anti-forgery="true">
     <div class="validation" sp-validation-summary="ModelOnly"></div>
     <div>
         <h2 class="form_title">Вход на сайт</h2>
         
         <a asp-action="Register" asp-controller="Acc">Регистрация</a><dl></dl>
         
         <div class="form_group">
             <label class="login_label" asp-for="Email">Email</label>
             <input class="form_input" placeholder=" " type="text" asp-for="Email"/>
             <span asp-validation-for="Email"/>
         </div>
         <div class="form_group">
             <label class="login_label" asp-for="Password">Password</label>
             <input class="form_input" asp-for="Password"/>
             <span asp-validation-for="Password"/>
         </div>
         <button class="form_button"> Enter</button>
     </div>
 </form>
 