@model RegisterModel

<form class="form" asp-action="Register" asp-controller="Acc" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <h2 class="form_title">Регистрация</h2>
         
        <div class="form_group">
            <label class="login_label" asp-for="Email">Введите Email</label><br/>
            <input class="form_input" type="text" asp-for="Email"/>
            <span asp-validation-for="Email"/>
        </div>
        <div class="form_group">
            <label class="login_label" asp-for="Password">Введите пароль</label><br/>
            <input class="form_input" asp-for="Password"/>
            <span asp-validation-for="Password"/>
        </div>
        <div class="form-group">
            <label class="login_label" asp-for="ConfirmPassword">Повторите пароль</label><br/>
            <input class="form_input" asp-for="ConfirmPassword"/>
            <span asp-validation-for="ConfirmPassword"/>
        </div>
        <dl></dl>
        <div>
            <button class="form_button"> Enter </button>
        </div>
    </div>
</form>