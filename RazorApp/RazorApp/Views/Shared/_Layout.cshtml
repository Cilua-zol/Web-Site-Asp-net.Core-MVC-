<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] -RazorApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/RazorApp.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Tema's App</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                    </li>
                </ul>
                <ul class="navbar-center">
                    <a  class="index_display1" href="https://www.last.fm/user/caska_d">Bank</a>
                </ul>
                <ul class="nav navbar-nav float-xs-right">
                    <div class="dropdown">
                      <button class="dropbtn">Account</button>
                        <div class="dropdown-content">
                            <a class="nav-link text-dark" asp-controller="Acc" asp-action="Profile"> Profile </a>
                            <a class="nav-link text-dark" asp-controller="Acc" asp-action="Login">Log In</a>
                            <a class="nav-link text-dark" style="background-color: #ee777f" asp-controller="Acc" asp-action="Logout">Log Out</a>
                        </div>
                    </div>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container" >
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="footer-container">
        &copy;2022 - Tema's App - <a  class="footer-link" asp-controller="Home" asp-action="Privacy"> Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>